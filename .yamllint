extends: default

rules:
  # Relax some rules for GitHub Actions workflows
  line-length:
    max: 120
    level: warning
  
  # Allow comments in YAML
  comments:
    min-spaces-from-content: 1
  
  # Allow flow style for short mappings
  braces:
    min-spaces-inside: 0
    max-spaces-inside: 1
  
  # Allow brackets for short sequences
  brackets:
    min-spaces-inside: 0
    max-spaces-inside: 1
  
  # Allow colons in values (for GitHub Actions expressions)
  colons:
    max-spaces-before: 0
    max-spaces-after: 1
  
  # Allow commas in values
  commas:
    max-spaces-before: 0
    max-spaces-after: 1
  
  # Allow dashes in keys
  dashes:
    max-spaces-before: 0
    max-spaces-after: 1
  
  # Allow dots in keys (for GitHub Actions expressions)
  dots:
    max-spaces-before: 0
    max-spaces-after: 0
  
  # Allow exclamation marks (for GitHub Actions expressions)
  exclamation-marks:
    max-spaces-before: 0
    max-spaces-after: 0
  
  # Allow hash symbols in values (for comments in expressions)
  hash:
    min-spaces-before: 1
  
  # Allow hyphens in keys
  hyphens:
    max-spaces-before: 0
    max-spaces-after: 1
  
  # Allow indentation for GitHub Actions
  indentation:
    spaces: 2
    indent-sequences: true
    check-multi-line-strings: false
  
  # Allow newlines in values
  new-lines:
    type: unix
  
  # Allow octal values
  octal-values:
    forbid-implicit-octal: false
  
  # Allow quoted strings
  quoted-strings:
    quote-type: single
    check-keys: false
    required: false
  
  # Allow trailing spaces (GitHub Actions sometimes needs them)
  trailing-spaces:
    level: warning
  
  # Allow truthy values
  truthy:
    allowed-values: ['true', 'false', 'on', 'off', 'yes', 'no']
    check-keys: false

# Ignore certain files
ignore: |
  .github/workflows/validate.yml
  .github/workflows/*.yml.bak
  *.tmp
  .git/
  node_modules/
